@model CARepository.RepoModels.ActivateAssessmentViewModel

@{
    ViewData["Title"] = "ActiveAssessment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ActiveAssessment</h1>

<h4>ActivateAssessmentViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ActiveAssessment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssmtId" class="control-label"></label>
                <select asp-for="AssmtId" class="form-control" asp-items="@(new SelectList(Model.AssessmentsList,"AssmtID","AssmtName"))"></select>
                <span asp-validation-for="AssmtId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isActive" /> @Html.DisplayNameFor(model => model.isActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
