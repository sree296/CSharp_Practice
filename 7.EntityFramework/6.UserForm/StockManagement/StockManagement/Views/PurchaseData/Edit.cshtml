@model DataAccess.Models.PurchaseDetails

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="well">
    <h4>PurchaseDetails</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PurchaseId" name="PurchaseId" />
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label"></label>
                    <input asp-for="ProductId" class="form-control" readonly/>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group hidden">
                    <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" readonly />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PurchaseDate" class="control-label"></label>
                    <input asp-for="PurchaseDate" class="form-control" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PurchaseQty" class="control-label"></label>
                    <input asp-for="PurchaseQty" class="form-control" />
                    <span asp-validation-for="PurchaseQty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>