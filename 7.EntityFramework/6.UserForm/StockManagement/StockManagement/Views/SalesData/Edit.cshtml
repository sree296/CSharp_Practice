@model DataAccess.Models.SaleDetails

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well">
        <h4>SaleDetails</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SalesID" name="SalesID" />
                    <div class="form-group">
                        <label asp-for="ProductId" class="control-label"></label>
                        <input asp-for="ProductId" class="form-control" readonly />
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group hidden">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" readonly />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SalesDate" class="control-label"></label>
                        <input asp-for="SalesDate" class="form-control" />
                        <span asp-validation-for="SalesDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SalesQty" class="control-label"></label>
                        <input asp-for="SalesQty" class="form-control" />
                        <span asp-validation-for="SalesQty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
